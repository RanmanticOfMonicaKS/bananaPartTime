<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">

    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" href="../css/common.css">
    <link rel="stylesheet" href="../css/font-awesome.min.css">
    <style>
        body {
            padding: .5rem;
            background-color: #fff;
        }

        .gotoMg {
            height: 50px;
        }

        /* 右上角部分样式 */
        .look {
            display: none;
            float: right;
            color: #333;
            font-size: 16px;
        }

        .closef {
            display: none;
            float: right;
            font-size: 20px;
            color: #000;
            padding: 10px;
        }

        /* 欢迎部分样式 */

        .welcome {
            height: 100px;
            line-height: 40px;
        }

        .welcome .title {
            font-weight: 700;
            font-size: 20px;

        }

        .welcome .tips {
            font-size: 16px;
            color: #ccc;

        }


        .login_con {
            line-height: 40px;
        }

        .login_con label {
            font-weight: 700;
        }

        .login_con li {
            position: relative;
            height: 100px;
        }

        .login_con .Mg_password {
            float: left;
        }

        .login_con .Mg_yzm {
            width: 80px;
            height: 40px;
            float: right;
            border-radius: 10px;
            line-height: 40px;
            text-align: center;
            color: #fff;
            font-weight: 700;
            background-color: #f6d365;
            box-shadow: 0 0 15px rgba(0, 0, 0, .2);
        }

        li.pwd_cnt {
            height: 50px;
            line-height: 50px;
        }

        .login_con .lostPwd {
            float: left;
            color: #ccc;
            font-size: 14px;
        }

        .login_con .sign {
            float: right;
        }

        .Mg_getPwd {
            position: absolute;
            width: 80px;
            height: 80px;
            line-height: 80px;
            background-color: #f8d840;
            border-radius: 50%;
            box-shadow: 0 0 15px rgba(0, 0, 0, .1);
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #fff;
            font-size: 25px;
        }
    </style>
</head>

<body>
    <!-- 头部 -->
    <div class="header">
        <div class="top">
            <i class="fa fa-chevron-left " tapmode onclick="api.closeWin();"></i>
            <div class="title">
                进行中
            </div>
        </div>
    </div>
    <div class="Mg_tempList">

    </div>

</body>
<script id="Mg_tempList" type="text/template">
    <ul> 
        {{~it:value:index}}
        <li class="Mg_temp_item" tapmode data-id="{{= value.id}}">
            <div class="title">{{= value.zptitle}}&nbsp;&nbsp;
                {{? value.zplikesta == 1 }}
                <span class="fa fa-thumbs-up"></span>
                {{?}}
                {{? value.zpfiresta == 1 }}
                <span class="fa fa-fire"></span>
                {{?}}
            </div>
            <div class="text clearfix">
                <span class="laction aui-pull-left"> <i class="fa fa-map-marker"></i>{{= value.zplocation}} </span>
                <!-- 公司 -->
                <span class="pay aui-pull-right">{{= value.zppay}} </span>
            </div>
        </li>
        {{~}}
    </ul>
</script>
<script type="text/javascript" src="../script/depences/api.js"></script>
<script src="../script/depences/jquery.min.js"></script>
<script src="../script/depences/doT.min.js"></script>
<script src="../script/common.js"></script>
<script>
    var id =  ($api.getStorage('Mg_uInfo') || {})['id'];
    apiready = function () {
        api.parseTapmode();
        $api.fixStatusBar($api.dom('.header'));

        getAllMyZp();
    }

    function getAllMyZp() {
        api.ajax({
            url: baseUrl + 'ks/ks/getOwnerZpInfoByStatus.ksrun',
            method: 'post',
            timeout: 30,
            dataType: 'json',
            returnAll: false,
            data: {
                body: {
                    ks_data: {
                        uId: id,
                        uZpstatus: '进行中'
                    }
                }

            }
        }, function (ret, err) {
            if (ret) {
                // TODO 
                console.log(JSON.stringify(ret));
                if (ret.ks_data && ret.ks_data.records) {
                    var data = ret.ks_data.records;
                }
                if (data.length != 0) {

                    Mg_temp(data);
                } else {
                    $('.Mg_tempList').html('');
                    api.toast({
                        msg: '您还没有报名数据',
                        duration: 2000,
                        location: 'bottom'
                    });
                }
            } else {
                api.alert({
                    msg: ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode)
                });
            };
        });
    }
</script>


</html>