<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">

    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" href="../css/common.css">
    <link rel="stylesheet" href="../css/font-awesome.min.css">
    <title>Document</title>
    <style>
            body{
              padding: .5rem;
              background-color: #fff;
            }
            .gotoMg {
              height: 50px;
            }
  
            /* 右上角部分样式 */ 
            .look  {
              display: none;
              float: right;
              color: #333;
              font-size: 16px;
              padding: 20px 0;
            }
            .closef {
              display: none;
              float: right;
              font-size: 20px;
              color: #000;
              padding: 10px;
            }
  
            /* 欢迎部分样式 */ 
            .welcome {
              height: 100px;
              line-height: 40px;
            }
            .welcome .title {
              font-weight: 700;
              font-size: 20px;
  
            }
            .welcome .title >i {
                padding: 0 10px;
                float: right;
            }  
            .welcome .tips {
              font-size: 16px;
              color: #ccc;
  
            }
            .login_con {
              line-height: 40px;
            }
            .login_con li  {
              position: relative;
              height: 100px;
            }
            li.pwd_cnt {
              height: 50px;
              line-height: 50px;
            }
            .login_con .lostPwd {
              padding: 10px;
              float: left;
              color: #ccc;
              font-size: 14px;
            }
            .login_con .sign {
              float: right;        
            }
            .Mg_login_btn {
              height: 50px;
              line-height: 50px;
  
            }
            .Mg_login_btn {
              position: absolute;
              width: 80%;
              height: 50px;
              background-color: #f8d840;
              border-radius: 25px;
              box-shadow:  0 0 15px rgba(0, 0, 0, .1);
              left: 50%;
              top: 50%;
              transform: translate(-50%,-50%);
              text-align: center;
              color: #fff;
            }

            .Mg_getPwd {
            position: absolute;
            width: 80px;
            height: 80px;
            line-height: 80px;
            background-color: #f8d840;
            border-radius: 50%;
            box-shadow: 0 0 15px rgba(0, 0, 0, .1);
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #fff;
            font-size: 25px;
        }

        </style>
</head>

<body>
    
        <!-- 欢迎 标题  -->
        <div class="welcome">
            <div class="title">
                您好，请重置密码
                <i class="fa fa-times-circle" onclick="api.closeWin();"></i>
            </div>
            <div class="tips">
                这次可别再忘啦
            </div>
        </div>
    
        <!-- 登录部分  -->
        <ul class="login_con">
            <li>
                <label for="Mg_uPassword_1">
                    新密码
                </label>
                <br />
                 &nbsp;&nbsp;&nbsp;
                <input type="number" placeholder="请输入新密码" id="Mg_uPassword_1">
            </li>
            <li>
                <label for="Mg_uPassword_2">
                    再输入一次新密码
                </label>
                <br />
                <input type="password" placeholder="请再次输入" id="Mg_uPassword_2">
            </li>
    
            <li>
                <div class="Mg_getPwd">
                    确认
                </div>
            </li>
        </ul>
    
    </body>
    <script type="text/javascript" src="../script/depences/api.js"></script>
    <script src="../script/depences/jquery.min.js"></script>
    <script src="../script/common.js"></script>
    <script>
        var pwd1;
        var pwd2;
        var id; // 用户id
        apiready = function(){
            api.parseTapmode();
            $api.fixStatusBar($api.dom('.welcome'));
            console.log(JSON.stringify(api.pageParam));
            id = api.pageParam.id;
            $('.Mg_getPwd').on('click',function() {
                pwd1 =  $('#Mg_uPassword_1').val().trim();
                pwd2=  $('#Mg_uPassword_2').val().trim();
                if(!pwd1 || !pwd2) {
                    return    api.toast({
                        msg: '密码不能为空',
                        duration: 2000,
                        location: 'top'
                    });
                }
                if(pwd1 != pwd2) {
                    return api.toast({
                        msg: '两次输入的密码不同',
                        duration: 2000,
                        location: 'top'
                    });
                }
                if(pwd1.length >12 || pwd1.length <4) {
                    api.toast({
                        msg: '请输入4-12位密码',
                        duration: 2000,
                        location: 'top'
                    });
                }
                if(pwd2.length >12 || pwd2.length <4) {
                    api.toast({
                        msg: '请输入4-12位密码',
                        duration: 2000,
                        location: 'top'
                    });
                }
                updatePwd();

            })
            
        }
        //发送ajax修改用户密码
        function updatePwd() {
            api.ajax({
                url: baseUrl + 'ks/updateUtb.ksrun',
                method: 'post',
                timeout: 30,
                dataType: 'json',
                returnAll:false,
                data:{
                    body:{
                        tbname:'u_tb',
                        uPassword:pwd1,
                        id:id
                    }
                }
            },function(ret,err){
                if (ret) {
                    // TODO 
                    console.log(JSON.stringify(ret));
                    if(ret.status == 1) {
                       api.toast({
                           msg: '密码重置成功,即将跳转',
                           duration: 2000,
                           location: 'bottom'
                       });
                       setTimeout(() => {
                        api.closeToWin({
                            name: 'root',
                            animation: {
                                type: 'flip',
                                subType: 'from_bottom',
                                duration: 500
                            }
                        });

                       },1000)
                    }
                } else {
                    api.alert({
                        msg:('错误码：'+err.code+'；错误信息：'+err.msg+'网络状态码：'+err.statusCode)
                    });
                };
            });
        }

    </script>
    
</html>